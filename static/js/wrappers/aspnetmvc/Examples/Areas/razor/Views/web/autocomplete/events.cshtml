		background: url('@Url.Content("~/content/web/autocomplete/taxi.png")') transparent no-repeat 0 0;
		margin: 40px 0 30px 40px;
	}
	#taxi label {
		display: block;
		color: #333;
		padding-bottom: 5px;
	}
