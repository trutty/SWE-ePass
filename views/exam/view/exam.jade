extends ../../layout

block content
	p= message

	h1= title

	a(href='/exam/new') Create New Exam

	table
		tr
			th
				| Name
			th
				| Lecture
			th
				| Year
			th
				| Options

		each item in exam
			tr
				td
					| #{item.name}
				td
					| #{item.lecture}
				td
					| #{item.date.getFullYear()}
				td
					a(href='/exam/view/#{item.id}') view
					a(href='/exam/edit/#{item.id}') edit
