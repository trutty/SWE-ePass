extends layout

block content
	p= message

	h1= title
	form(action='/login', method='post')
		div
			label(for='username')
				| Username:
				input#username(type='text', name='username')

		div
			label(for='password')
				| Password: 
				input#password(type='password', name='password')

		div
			input(type='submit', value='Log In')