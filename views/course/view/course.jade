extends ../../layout

block content
	a.k-link(href='/course/new') Create New Course

	table
		tr
			th
				| Name
			th
				| Year
			th
				| Term
			th
				| Options

		each item in course
			tr
				td
					| #{item.name}
				td
					| #{item.year}
				td
					| #{item.term}
				td
					a.k-link(href='/course/view/#{item.id}') view 
					a.k-link(href='/course/edit/#{item.id}') edit 
					a.k-link(href='/course/delete/#{item.id}') delete 